{
    "name": "alexandre-daubois/phpkl",
    "type": "library",
    "description": "Apple PKL language implementation in PHP",
    "keywords": ["pkl", "apple", "pickle", "language", "interpreter"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Daubois",
            "email": "alex.daubois@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "symfony/console": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/process": "^7.0",
        "symfony/property-access": "^7.0",
        "symfony/serializer": "^7.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Phpkl\\": "src", "Phpkl\\Tests\\": "tests" }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "cs": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --diff --allow-risky=yes",
        "stan": "vendor/bin/phpstan analyse src tests -l 8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.49",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5.10",
        "symfony/var-dumper": "^7.0"
    }
}
